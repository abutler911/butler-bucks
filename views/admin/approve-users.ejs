<div class="container mt-5">
  <h1 class="admin-title text-dark mb-3">Approve Users</h1>

  <% if (success_msg && success_msg.length > 0) { %>
  <div class="alert alert-success"><%= success_msg %></div>
  <% } %> <% if (error_msg && error_msg.length > 0) { %>
  <div class="alert alert-danger"><%= error_msg %></div>
  <% } %>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td>
            <!-- Approve Form -->
            <form
              action="/admin/approve-user/<%= user._id %>"
              method="post"
              style="display: inline"
            >
              <button type="submit" class="admin-btn">Approve</button>
            </form>
            <!-- Deny Form -->
            <form
              action="/admin/deny-user/<%= user._id %>"
              method="post"
              style="display: inline"
            >
              <button type="submit" class="admin-btn">Deny</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
